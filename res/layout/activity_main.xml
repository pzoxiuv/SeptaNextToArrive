<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity" >

    <TableRow
        android:id="@+id/tableRow1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="124dp" >
    </TableRow>

    <AutoCompleteTextView
        android:id="@+id/toTextField"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/fromTextField"
        android:layout_below="@+id/fromTextField"
        android:inputType="text"
        android:imeOptions="actionSearch"
        android:ems="10" />

    <TextView
        android:id="@+id/toLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/toTextField"
        android:layout_alignBottom="@+id/toTextField"
        android:layout_alignRight="@+id/fromLabel"
        android:text="To" />

    <TextView
        android:id="@+id/fromLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/fromTextField"
        android:layout_alignBottom="@+id/fromTextField"
        android:layout_alignParentLeft="true"
        android:text="From" />

    <AutoCompleteTextView
        android:id="@+id/fromTextField"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/fromLabel"
        android:ems="10"
        android:imeOptions="actionNext"
        android:inputType="text" />

    <ListView
        android:id="@+id/resultsListView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/toTextField"
        android:layout_marginTop="19dp" >
    </ListView>

</RelativeLayout>
